<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="HospitalManagementAvolonia.App"
             RequestedThemeVariant="Light">
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml" />
    </Application.Styles>
    <Application.Resources>
        <!-- ═══════════════════════════════════════════
             LIGHT THEME TOKENS  (default)
             Toggle these via App.axaml.cs on theme change
             ═══════════════════════════════════════════ -->

        <!-- Background surfaces -->
        <Color x:Key="PrimaryBg">#F3F4F6</Color>
        <Color x:Key="SidebarBg">#FFFFFF</Color>
        <Color x:Key="CardBg">#FFFFFF</Color>
        <Color x:Key="HoverBg">#F9FAFB</Color>
        <Color x:Key="InputBg">#F9FAFB</Color>

        <!-- Text -->
        <Color x:Key="TextPrimary">#111827</Color>
        <Color x:Key="TextSecondary">#4B5563</Color>
        <Color x:Key="TextMuted">#9CA3AF</Color>
        <Color x:Key="TextOnAccent">#FFFFFF</Color>

        <!-- Border / Divider -->
        <Color x:Key="BorderClr">#E5E7EB</Color>
        <Color x:Key="DividerClr">#F3F4F6</Color>

        <!-- Accent palette -->
        <Color x:Key="AccentBlue">#2563EB</Color>
        <Color x:Key="AccentBlueLight">#DBEAFE</Color>
        <Color x:Key="AccentGreen">#16A34A</Color>
        <Color x:Key="AccentGreenLight">#DCFCE7</Color>
        <Color x:Key="AccentRed">#DC2626</Color>
        <Color x:Key="AccentRedLight">#FEE2E2</Color>
        <Color x:Key="AccentOrange">#D97706</Color>
        <Color x:Key="AccentOrangeLight">#FEF3C7</Color>
        <Color x:Key="AccentPurple">#7C3AED</Color>
        <Color x:Key="AccentPurpleLight">#EDE9FE</Color>

        <!-- Status / semantic -->
        <Color x:Key="StatusSuccess">#16A34A</Color>
        <Color x:Key="StatusWarning">#D97706</Color>
        <Color x:Key="StatusError">#DC2626</Color>
        <Color x:Key="StatusInfo">#2563EB</Color>

        <!-- ── Brushes ─────────────────────────────── -->
        <SolidColorBrush x:Key="PrimaryBgBrush"       Color="{StaticResource PrimaryBg}" />
        <SolidColorBrush x:Key="SidebarBgBrush"       Color="{StaticResource SidebarBg}" />
        <SolidColorBrush x:Key="CardBgBrush"          Color="{StaticResource CardBg}" />
        <SolidColorBrush x:Key="HoverBgBrush"         Color="{StaticResource HoverBg}" />
        <SolidColorBrush x:Key="InputBgBrush"         Color="{StaticResource InputBg}" />
        <SolidColorBrush x:Key="AccentBlueBrush"      Color="{StaticResource AccentBlue}" />
        <SolidColorBrush x:Key="AccentBlueLightBrush" Color="{StaticResource AccentBlueLight}" />
        <SolidColorBrush x:Key="AccentGreenBrush"     Color="{StaticResource AccentGreen}" />
        <SolidColorBrush x:Key="AccentGreenLightBrush" Color="{StaticResource AccentGreenLight}" />
        <SolidColorBrush x:Key="AccentRedBrush"       Color="{StaticResource AccentRed}" />
        <SolidColorBrush x:Key="AccentRedLightBrush"  Color="{StaticResource AccentRedLight}" />
        <SolidColorBrush x:Key="AccentOrangeBrush"    Color="{StaticResource AccentOrange}" />
        <SolidColorBrush x:Key="AccentOrangeLightBrush" Color="{StaticResource AccentOrangeLight}" />
        <SolidColorBrush x:Key="AccentPurpleBrush"    Color="{StaticResource AccentPurple}" />
        <SolidColorBrush x:Key="TextPrimaryBrush"     Color="{StaticResource TextPrimary}" />
        <SolidColorBrush x:Key="TextSecondaryBrush"   Color="{StaticResource TextSecondary}" />
        <SolidColorBrush x:Key="TextMutedBrush"       Color="{StaticResource TextMuted}" />
        <SolidColorBrush x:Key="BorderBrush"          Color="{StaticResource BorderClr}" />
        <SolidColorBrush x:Key="DividerBrush"         Color="{StaticResource DividerClr}" />

        <!-- ── Typography scale ──────────────────────── -->
        <x:Double x:Key="FontXS">11</x:Double>
        <x:Double x:Key="FontSM">13</x:Double>
        <x:Double x:Key="FontBase">14</x:Double>
        <x:Double x:Key="FontLG">16</x:Double>
        <x:Double x:Key="FontXL">18</x:Double>
        <x:Double x:Key="Font2XL">22</x:Double>
        <x:Double x:Key="Font3XL">28</x:Double>

        <!-- ── Corner radius ─────────────────────────── -->
        <CornerRadius x:Key="RadiusSM">4</CornerRadius>
        <CornerRadius x:Key="RadiusMD">6</CornerRadius>
        <CornerRadius x:Key="RadiusLG">8</CornerRadius>
        <CornerRadius x:Key="RadiusXL">12</CornerRadius>
        <CornerRadius x:Key="RadiusFull">999</CornerRadius>
    </Application.Resources>
</Application>

